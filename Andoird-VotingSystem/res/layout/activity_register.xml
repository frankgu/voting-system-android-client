<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dongfeng.andoird_votingsystem.Register" >

    <EditText
        android:id="@+id/register_FLName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:inputType="textPersonName" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/register_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/register_firstname_view"
        android:layout_alignLeft="@+id/register_firstname_view"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/register_username_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/register_username"
        android:layout_alignLeft="@+id/register_username"
        android:text="Username" />

    <TextView
        android:id="@+id/register_password_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/register_password"
        android:layout_alignLeft="@+id/register_password"
        android:text="Password" />

    <EditText
        android:id="@+id/register_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/register_password_view"
        android:layout_alignLeft="@+id/register_password_view"
        android:ems="10" />

    <TextView
        android:id="@+id/register_firstname_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/register_FLName"
        android:layout_alignLeft="@+id/register_FLName"
        android:text="First name" />

    <EditText
        android:id="@+id/register_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/register_address_view"
        android:layout_below="@+id/register_address_view"
        android:ems="10"
        android:inputType="textPostalAddress" />

    <Button
        android:id="@+id/register_regist_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_address"
        android:layout_centerHorizontal="true"
        android:text="Regist" 
        android:onClick="register_regist_button_click_event"/>

    <TextView
        android:id="@+id/register_lastname_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/register_FLName"
        android:layout_below="@+id/register_FLName"
        android:text="Last Name" />

    <EditText
        android:id="@+id/register_lastname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/register_lastname_view"
        android:layout_below="@+id/register_lastname_view"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/register_address_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/register_lastname"
        android:layout_below="@+id/register_lastname"
        android:text="Address" />

</RelativeLayout>
